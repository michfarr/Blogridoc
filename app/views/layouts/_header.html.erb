            <li><%= link_to "#", :class => "dropdown-button", :data => { :activates => "dropdown1" } do %>
              Contact<i class="material-icons right">arrow_drop_down</i>
            <% end %></li>
          </ul>
        </div>
      </div>
    </nav>
