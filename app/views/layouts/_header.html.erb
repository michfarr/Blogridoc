<header>
  <div class="navbar-fixed">
    <!-- Dropdown Structure -->
    <ul id="dropdown1" class="dropdown-content">
      <li><%= link_to "LinkedIn", "https://www.linkedin.com/in/mikepfarrell" %></li>
      <li><%= link_to "Twitter", "https://www.twitter.com/" %></li>
      <li><%= link_to "GitHub", "https://github.com/michfarr" %></li>
    </ul>
    <nav>
      <div class="nav-wrapper blue darken-2">
        <div class="container">
          <ul class="left hide-on-med-and-down">
